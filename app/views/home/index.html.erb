<section class="section">
  <div class="section-header">
    <h1>Dashboard</h1>
  </div>

  <div class="card-wrapper">
    <div class="card">
      <div class="card-body">
        <h4>Total Profile: <%= @profiles.count %></h4>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h4>Online: <%= @online_profiles.count %></h4>
      </div>
    </div>
  </div>

  <div class="card card-primary">
    <div class="card-body">
      <h4>Chat with website visitors via Whatsapp</h4>
      <%= link_to 'Demo', demo_path, class: 'btn btn-primary' %>
    </div>
  </div>
</section>