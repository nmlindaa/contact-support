<section class="section-content">
  <div class="card">
    <div class="card-body">
    <%= form_for(@profile, url: url, html: { method: method }) do |f| %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label :role %><br />
        <%= f.text_field :role, autofocus: true, autocomplete: "role" %>
      </div>

      <div class="form-group">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
      </div>

      <div class="form-group">
        <%= f.label :availability %><br />
        <%= f.text_field :availability, autofocus: true, autocomplete: "availability" %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
  </div>
</section>