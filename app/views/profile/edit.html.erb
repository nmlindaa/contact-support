<h2>Edit <%= current_user.name %></h2>
<p><% notice %></p>
<%= form_for(@profile, url: profile_path(@profile.id), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.text_field :role, autofocus: true, autocomplete: "role" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :availability %><br />
    <%= f.text_field :availability, autofocus: true, autocomplete: "availability" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back to Home", :back %>
